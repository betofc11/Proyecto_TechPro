@model Proyecto_TechPro.Entidades.Usuario
@{
    ViewBag.Title = "Registrarse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <br />
    <h1>Registrarse</h1>
    <hr />
    <br />

    @using (Html.BeginForm("RegistrarUsuario", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationMessage("error", new { @class = "text-danger" })

        <div class="form-group">
            <label for="txt_email">Correo electrónico</label>
            @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Ingresar correo electronico", @id = "txt_email" })
            @Html.ValidationMessage("email", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="txt_numero">Número de celular</label>
            @Html.TextBoxFor(m => m.telefono, new { @class = "form-control", @placeholder = "Numero de telfono", @type = "number", @id = "txt_telefono" })
            @Html.ValidationMessage("telefono", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="txt_nombre">Nombre</label>
            @Html.TextBoxFor(m => m.nombre, new { @class = "form-control", @placeholder = "Nombre", @type = "text", @id = "txt_nombre" })
            @Html.ValidationMessage("nombre", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="txt_primer">Primer apellido</label>
            @Html.TextBoxFor(m => m.primerApellido, new { @class = "form-control", @placeholder = "Primer Apellido", @type = "text", @id = "txt_primer" })
            @Html.ValidationMessage("primerApellido", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="txt_segundo">Segundo apellido</label>
            @Html.TextBoxFor(m => m.segundoApellido, new { @class = "form-control", @placeholder = "Segundo Apellido", @type = "text", @id = "txt_segundo" })
            @Html.ValidationMessage("segundoApellido", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="txt_pass1">Contraseña</label>
            @Html.TextBoxFor(m => m.Pass, new { @class = "form-control", @placeholder = "Contraseña", @type = "password", @id = "txt_pass1" })
            @Html.ValidationMessage("Pass", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="txt_pass2">Validación contraseña</label>
            @Html.TextBoxFor(m => m.Pass2, new { @class = "form-control", @placeholder = "Confirmar contraseña", @type = "password", @id = "txt_pass2" })
            @Html.ValidationMessage("Pass2", new { @class = "text-danger" })
        </div>
        <br />
        <button class="btn btn-success" type="submit">Crea tu cuenta TechPro</button>
    }

    <div id="guardar" style="display:none">
    </div>
    <br />
    <br />
    <h6 class="text-center">¿Ya tiene una cuenta? @Html.ActionLink("Inicie sesión", "Login", "Login")</h6>
    <br />
</center>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.message")
        };
    </script>
}