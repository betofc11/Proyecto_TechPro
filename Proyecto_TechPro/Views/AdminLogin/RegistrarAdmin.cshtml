@model Proyecto_TechPro.Entidades.Admin
@{
    ViewBag.Title = "Registrar Administrador";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<center>
    <h2>Registrar Administrador</h2>

    @using (Html.BeginForm("registrarse", "AdminLogin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationMessage("error", new { @class = "text-danger" })

<div class="form-horizontal">
    <hr />
    <div class="form-group">
        <label for="txt_cedula">Cedula</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.cedula, new { htmlAttributes = new { @class = "form-control", @placeholder = "Número de cédula" } })
            @Html.ValidationMessageFor(model => model.cedula, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="txt_Pass">Nombre</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="txt_primer">Primer apellido</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.primerApellido, new { htmlAttributes = new { @class = "form-control", @placeholder = "Primer apellido" } })
            @Html.ValidationMessageFor(model => model.primerApellido, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="txt_segundo">Segundo apellido</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.segundoApellido, new { htmlAttributes = new { @class = "form-control", @placeholder = "Segundo apellido" } })
            @Html.ValidationMessageFor(model => model.segundoApellido, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="txt_email">Correo electrónico</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingresar correo electrónico " } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="txt_Pass">Contraseña</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.pass, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Contraseña" } })
            @Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="txt_Pass2">Confirmar contraseña</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.pass2, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Confirmar contraseña" } })
            @Html.ValidationMessageFor(model => model.pass2, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Registrar administrador" class="btn btn-success" />
        </div>
    </div>
</div>
    }
</center>

