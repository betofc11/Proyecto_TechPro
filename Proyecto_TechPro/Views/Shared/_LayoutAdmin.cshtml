<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Site.css")
</head>
<body>
    <div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
    top: 0px; width: 100%; height: 100%; background-color: rgba(255,255,255,0.7); z-index: 30001;
    opacity: .8; filter:opacity(70%);display:none">
        <p style="position: absolute; top: 50%; left: 50%; color: White;">
            <div class="d-flex flex-wrap justify-content-center" style="margin-top:25%;">
                <div class="spinner-border " role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </p>
    </div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-around"
             id="navbarSupportedContent">
            <ul class="navbar-nav mb-2 mb-lg-0">
                <li class="nav-item text-black-50">@Html.ActionLink("TechProAdmin", "Index", "Admin", new { @class = "nav-link" })</li>
                <li class="nav-item menuPrincipal">@Html.ActionLink("Ordenes", "Index", "Admin", new { @class = "nav-link" })</li>
                <li class="nav-item menuPrincipal">@Html.ActionLink("Productos", "Productos", "Admin", new { @class = "nav-link" })</li>
                <li class="nav-item menuPrincipal">
                </li>
            </ul>
        </div>
    </nav>
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Acciones/admin.js")
    @RenderSection("scripts", required: false)
</body>
</html>

