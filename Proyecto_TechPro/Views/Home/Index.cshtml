@model IEnumerable<Productos>

@{
    ViewBag.Title = "Home Page";
}


<div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
    top: 0px; width: 100%; height: 100%; background-color: rgba(255,255,255,0.7); z-index: 30001;
    opacity: .8; filter: alpha(opacity=70);display:none">
    <p style="position: absolute; top: 50%; left: 50%; color: White;">
        <div class="d-flex flex-wrap justify-content-center" style="margin-top:25%;">
        <div class="spinner-border " role="status" >
            <span class="sr-only">Loading...</span>
        </div>
        </div>
    </p>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/carousel/carousel1.jpeg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/carousel/carousel2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/carousel/carousel3.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<br>
<center>
    @using (Html.BeginForm("AgregaItem", "Home", FormMethod.Post))
    {
        <h2 style="font-family:Arial; font-size:30px"> Top de Categorias </h2>
        <br />
        <div class="d-flex flex-wrap justify-content-around">

            <a href="@Url.Action("LaptopView", "Home")" name="lkLaptop" title="Laptops" class="links">
                <div>
                    <img alt="laptops" src="@Url.Content("~/images/TopCategorias/laptops.jpg")">
                </div>
            </a>
            <a href="@Url.Action("TelevisorView", "Home")" title="Televisor">
                <div>
                    <img alt="televisor" src="@Url.Content("~/images/TopCategorias/televisores.jpg")">
                </div>
            </a>

            <a href="@Url.Action("ComponentesPCView", "Home")" title="ComponentesPC">
                <div>
                    <img alt="componentesPC" src="@Url.Content("~/images/TopCategorias/componentesPC.jpg")">
                </div>
            </a>
            <a href="@Url.Action("SmartphonesView", "Home")" title="Smartphones">
                <div>
                    <img alt="componentesPC" src="@Url.Content("~/images/TopCategorias/smartphones.jpg")">
                </div>
            </a>
            <a href="@Url.Action("AudifonosView", "Home")" title="Audifinos">
                <div>
                    <img alt="audifinos" src="@Url.Content("~/images/TopCategorias/audifinos.jpg")">
                </div>
            </a>

        </div>
    }
    </center>
<br>
<br>
<div class="card-deck d-flex flex-wrap justify-content-center">

    @foreach (var item in Model)
    {
        <div class="card">
            <div class="text-center">
                <img class="card-img-top align-content-center" alt="Imagen de pizza" src="~/images/productos/@item.imagen" style="max-width: 200px" />
            </div>
            <div class="card-body">
                <input type="text" id="" value="@item.idProducto" hidden />
                <h5 class="card-title">@item.nombreProducto</h5>
            </div>
            <div class="card-footer justify-content-center">
                <h6 class="precio text-center"><b>₡@item.precio</b></h6>
                <button type="button" class="btn btn-success d-flex justify-content-center" style="width:100%;" itemid="@item.idProducto" onclick="agregarCarrito(this)">Agregar al carrito</button>
            </div>
        </div>
    }

</div>
<br />
<br />

